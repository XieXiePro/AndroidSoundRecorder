<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/normal_color">

        <TextView
            android:id="@+id/id_btn_back"
            style="@style/main_center_15"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:padding="5dp"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:text="返回" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="录音文件列表"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:text="选取录音" />

        <TextView
            android:id="@+id/id_btn_commit"
            style="@style/main_center_15"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:text="确认"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:text="确认" />
    </LinearLayout>

    <ListView
        android:id="@+id/id_lv_audio_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/record_list_empty_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/empty" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/record_list_empty"
            style="@style/main_center_15"
            android:text="@string/record_list_tip"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

</LinearLayout>